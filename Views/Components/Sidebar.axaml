<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaTetris.ViewModels"
             xmlns:comp="using:AvaloniaTetris.Views.Components"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="AvaloniaTetris.Views.Components.Sidebar"
             x:DataType="vm:GameViewModel">
    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="BackEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 8 20 0 #60000000"/>
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Spacing="30" Margin="30">
            <!-- Score Section -->
            <Border Classes="card" Background="#1E1E1E" CornerRadius="15" Padding="25" BoxShadow="0 4 10 0 #40000000">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="SCORE" Foreground="#00F2FF" FontSize="14" FontWeight="SemiBold" LetterSpacing="2" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding GameState.Score}" Foreground="White" FontSize="36" FontWeight="Black" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Next Block Section -->
            <Border Classes="card" Background="#1E1E1E" CornerRadius="15" Padding="25" BoxShadow="0 4 10 0 #40000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="NEXT" Foreground="#CC00FF" FontSize="14" FontWeight="SemiBold" LetterSpacing="2" HorizontalAlignment="Center"/>
                    <Border Width="120" Height="120" Background="#121212" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
                         <comp:BlockPreview Block="{Binding GameState.BlockQueue.NextBlock}" Width="100" Height="100"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Hold Block Section -->
            <Border Classes="card" Background="#1E1E1E" CornerRadius="15" Padding="25" BoxShadow="0 4 10 0 #40000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="HOLD" Foreground="#FF9900" FontSize="14" FontWeight="SemiBold" LetterSpacing="2" HorizontalAlignment="Center"/>
                    <Border Width="120" Height="120" Background="#121212" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
                         <comp:BlockPreview Block="{Binding GameState.HeldBlock}" Width="100" Height="100"/>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Controls Section -->
            <StackPanel Spacing="15">
                <Button Command="{Binding RestartCommand}" 
                        Focusable="False"
                        Content="RESTART" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        Padding="15"
                        Background="#333333"
                        CornerRadius="10"/>

                <Button Command="{Binding BackToMenuCommand}" 
                        Focusable="False"
                        Content="MAIN MENU" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        Padding="15"
                        Background="#222222"
                        CornerRadius="10"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
